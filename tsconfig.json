{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["jest", "element-plus/global"],
    "paths": {
      "@/*": [".src/*"],
      "@": [
        ".src/index.js",
        ".src/index.ts",
        ".src/index.json",
        ".src/index.vue",
        ".src/index.scss",
        ".src/index.css"
      ],
      "@core/*": ["./src/core/*"],
      "@core": [
        "./src/core/index.js",
        "./src/core/index.ts",
        "./src/core/index.json",
        "./src/core/index.vue",
        "./src/core/index.scss",
        "./src/core/index.css"
      ],
      "@components/*": ["./src/components/*"],
      "@components": [
        "./src/components/index.js",
        "./src/components/index.ts",
        "./src/components/index.json",
        "./src/components/index.vue",
        "./src/components/index.scss",
        "./src/components/index.css"
      ],
      "@constants/*": ["./src/constants/*"],
      "@constants": [
        "./src/constants/index.js",
        "./src/constants/index.ts",
        "./src/constants/index.json",
        "./src/constants/index.vue",
        "./src/constants/index.scss",
        "./src/constants/index.css"
      ],
      "@store/*": ["./src/store/*"],
      "@store": [
        "./src/store/index.js",
        "./src/store/index.ts",
        "./src/store/index.json",
        "./src/store/index.vue",
        "./src/store/index.scss",
        "./src/store/index.css"
      ],
      "@types/*": ["./src/types/*"],
      "@types": [
        "./src/types/index.js",
        "./src/types/index.ts",
        "./src/types/index.json",
        "./src/types/index.vue",
        "./src/types/index.scss",
        "./src/types/index.css"
      ],
      "@modules/*": ["./src/modules/*"],
      "@modules": [
        "./src/modules/index.js",
        "./src/modules/index.ts",
        "./src/modules/index.json",
        "./src/modules/index.vue",
        "./src/modules/index.scss",
        "./src/modules/index.css"
      ],
      "@styles/*": ["./src/core/styles/*"],
      "@styles": [
        "./src/core/styles/index.js",
        "./src/core/styles/index.ts",
        "./src/core/styles/index.json",
        "./src/core/styles/index.vue",
        "./src/core/styles/index.scss",
        "./src/core/styles/index.css"
      ],
      "@use/*": ["./src/core/use/*"],
      "@use": [
        "./src/core/use/index.js",
        "./src/core/use/index.ts",
        "./src/core/use/index.json",
        "./src/core/use/index.vue",
        "./src/core/use/index.scss",
        "./src/core/use/index.css"
      ],
      "@utils/*": ["./src/core/utils/*"],
      "@utils": [
        "./src/core/utils/index.js",
        "./src/core/utils/index.ts",
        "./src/core/utils/index.json",
        "./src/core/utils/index.vue",
        "./src/core/utils/index.scss",
        "./src/core/utils/index.css"
      ]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
